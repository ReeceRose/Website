---
import { IProjects } from "@types";
import ProjectCard from "./ProjectCard.astro";

const { projects } = Astro.props as IProjects;
const hasProjects = projects.length > 0;
---

<section class="projects-section" id="projects">
  <div class="section-header">
    <span class="section-label">PROJECTS</span>
    <h2 class="section-title">Things I've Built</h2>
  </div>

  {hasProjects ? (
    <div class="projects-grid">
      {projects.map((project, index) => (
        <div class="project-wrapper" style={`--delay: ${index * 0.1}s`}>
          <ProjectCard projectDetail={project} />
        </div>
      ))}
    </div>
  ) : (
    <div class="coming-soon">
      <div class="coming-soon-icon">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83" />
        </svg>
      </div>
      <h3 class="coming-soon-title">Coming Soon</h3>
      <p class="coming-soon-text">
        I'm currently working on documenting my projects.<br />
        Check back soon or visit my GitHub in the meantime.
      </p>
      <a href="https://github.com/reecerose" target="_blank" rel="noopener noreferrer" class="coming-soon-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
        </svg>
        View GitHub Profile
      </a>
    </div>
  )}
</section>

<style>
  .projects-section {
    padding: 5rem 1.5rem;
    max-width: 72rem;
    margin: 0 auto;
  }

  .section-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .section-label {
    display: inline-block;
    font-family: "Inter", sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #33d2ff;
    margin-bottom: 0.75rem;
  }

  .section-title {
    font-family: "Outfit", sans-serif;
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 700;
    color: #111;
  }

  :global([data-theme="dark"]) .section-title {
    color: #fff;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    max-width: 64rem;
    margin: 0 auto;
  }

  .project-wrapper {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay);
  }

  /* Coming Soon State */
  .coming-soon {
    text-align: center;
    padding: 4rem 2rem;
    max-width: 28rem;
    margin: 0 auto;
    background: rgba(0, 0, 0, 0.02);
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 20px;
    animation: fadeInUp 0.6s ease forwards;
  }

  :global([data-theme="dark"]) .coming-soon {
    background: rgba(255, 255, 255, 0.02);
    border-color: rgba(255, 255, 255, 0.06);
  }

  .coming-soon-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: rgba(51, 210, 255, 0.1);
    border-radius: 50%;
    color: #33d2ff;
    margin-bottom: 1.5rem;
    animation: spin 8s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .coming-soon-title {
    font-family: "Outfit", sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #111;
    margin: 0 0 0.75rem 0;
  }

  :global([data-theme="dark"]) .coming-soon-title {
    color: #fff;
  }

  .coming-soon-text {
    font-family: "Inter", sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    color: #666;
    margin: 0 0 1.5rem 0;
  }

  :global([data-theme="dark"]) .coming-soon-text {
    color: #999;
  }

  .coming-soon-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: "Inter", sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    color: #33d2ff;
    text-decoration: none;
    padding: 0.75rem 1.25rem;
    background: rgba(51, 210, 255, 0.1);
    border: 1px solid rgba(51, 210, 255, 0.2);
    border-radius: 10px;
    transition: all 0.2s ease;
  }

  .coming-soon-link:hover {
    background: #33d2ff;
    border-color: #33d2ff;
    color: #fff;
    transform: translateY(-2px);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
