---
import { IProjectDetails } from "@types";
const { projectDetail } = Astro.props as IProjectDetails;
const { title, tech, thumbnail, liveUrl, githubUrl } = projectDetail;
---

<article class="w-full group dark:text-light">
  <h1 class="mb-4 text-xl sm:text-2xl text-blue">{title}</h1>
  <div class="grid grid-cols-12 mb-4">
    {
      tech?.map((t) => (
        <p
          class:list={[
            "col-span-4 p-3 text-lg text-center rounded-2xl font-bold dark:text-light",
            t.colour,
          ]}
        >
          {t.title}
        </p>
      ))
    }
  </div>

  <img
    src={thumbnail}
    class="w-full max-h-80 rounded-3xl"
    loading="lazy"
    width="100%"
    height="100%"
    alt="featureImage"
  />

  <div class="flex flex-row items-center gap-5 mt-6">
    {
      githubUrl && (
        <>
          <h2>GitHub</h2>
          <a
            href={githubUrl}
            class="footer-icons"
            aria-label="Social Media"
            target="_blank"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-github"
            >
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
            </svg>
          </a>
        </>
      )
    }
    {
      liveUrl && (
        <>
          <h2>Deployment</h2>
          <a
            href={liveUrl}
            class="footer-icons"
            aria-label="Social Media"
            target="_blank"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-link-2"
            >
              <path d="M15 7h3a5 5 0 0 1 5 5 5 5 0 0 1-5 5h-3m-6 0H6a5 5 0 0 1-5-5 5 5 0 0 1 5-5h3" />
              <line x1="8" y1="12" x2="16" y2="12" />
            </svg>
          </a>
        </>
      )
    }
  </div>
</article>
