---
import { info } from "@data";

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-main">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          {info.name.split(" ")[0]}<span class="text-blue">.</span>
        </a>
        <p class="footer-tagline">
          Building digital experiences that make a difference.
        </p>
      </div>

      <div class="footer-links">
        <div class="footer-group">
          <h4 class="footer-group-title">Navigation</h4>
          <a href="#experience" class="footer-link">Experience</a>
          <a href="#skills" class="footer-link">Skills</a>
          <a href="#projects" class="footer-link">Projects</a>
          <a href="#education" class="footer-link">Education</a>
        </div>

        <div class="footer-group">
          <h4 class="footer-group-title">Connect</h4>
          <a
            href={info.socialMedia.github}
            target="_blank"
            rel="noopener noreferrer"
            class="footer-link"
          >
            GitHub
          </a>
          <a
            href={info.socialMedia.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="footer-link"
          >
            LinkedIn
          </a>
          <a href={info.socialMedia.email} class="footer-link">Email</a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {currentYear} {info.name}. All rights reserved.
      </p>

      <div class="footer-social">
        <a
          href={info.socialMedia.github}
          target="_blank"
          rel="noopener noreferrer"
          class="social-icon"
          aria-label="GitHub Profile"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
            ></path>
          </svg>
        </a>
        <a
          href={info.socialMedia.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="social-icon"
          aria-label="LinkedIn Profile"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
            ></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>
        <a
          href={info.socialMedia.email}
          class="social-icon"
          aria-label="Send Email"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
            ></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <div class="footer-gradient"></div>
</footer>

<style>
  .footer {
    position: relative;
    padding: 4rem 1.5rem 2rem;
    margin-top: 4rem;
    overflow: hidden;
  }

  .footer-content {
    max-width: 72rem;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    gap: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    flex-wrap: wrap;
  }

  :global([data-theme="dark"]) .footer-main {
    border-bottom-color: rgba(255, 255, 255, 0.08);
  }

  .footer-brand {
    max-width: 280px;
  }

  .footer-logo {
    font-family: "Outfit", sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: #111;
    text-decoration: none;
    display: inline-block;
    margin-bottom: 0.75rem;
    transition: opacity 0.2s ease;
  }

  :global([data-theme="dark"]) .footer-logo {
    color: #fff;
  }

  .footer-logo:hover {
    opacity: 0.7;
  }

  .text-blue {
    color: #33d2ff;
  }

  .footer-tagline {
    font-family: "Inter", sans-serif;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #666;
    margin: 0;
  }

  :global([data-theme="dark"]) .footer-tagline {
    color: #888;
  }

  .footer-links {
    display: flex;
    gap: 4rem;
  }

  .footer-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-group-title {
    font-family: "Outfit", sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #111;
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  :global([data-theme="dark"]) .footer-group-title {
    color: #fff;
  }

  .footer-link {
    font-family: "Inter", sans-serif;
    font-size: 0.9375rem;
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  :global([data-theme="dark"]) .footer-link {
    color: #888;
  }

  .footer-link:hover {
    color: #33d2ff;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer-copyright {
    font-family: "Inter", sans-serif;
    font-size: 0.875rem;
    color: #888;
    margin: 0;
  }

  :global([data-theme="dark"]) .footer-copyright {
    color: #666;
  }

  .footer-social {
    display: flex;
    gap: 0.5rem;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    color: #666;
    background: rgba(0, 0, 0, 0.04);
    transition: all 0.2s ease;
  }

  :global([data-theme="dark"]) .social-icon {
    color: #888;
    background: rgba(255, 255, 255, 0.04);
  }

  .social-icon:hover {
    color: #33d2ff;
    background: rgba(51, 210, 255, 0.1);
    transform: translateY(-2px);
  }

  .footer-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(51, 210, 255, 0.03) 100%
    );
    pointer-events: none;
  }

  @media (max-width: 640px) {
    .footer-main {
      flex-direction: column;
    }

    .footer-links {
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
