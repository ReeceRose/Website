---
import { IExperiences } from "@types";

const { title, details } = Astro.props as IExperiences;
const sectionId = title.toLowerCase();
---

<section class="experience-section" id={sectionId}>
  <div class="section-header">
    <span class="section-label">{title}</span>
    <h2 class="section-title">
      {title === "EXPERIENCE" ? "Where I've Worked" : "My Education"}
    </h2>
  </div>

  <div class="timeline">
    {
      details.map((item, index) => (
        <div class="timeline-item" style={`--delay: ${index * 0.1}s`}>
          <div class="timeline-marker">
            <div class="marker-dot" />
            {index < details.length - 1 && <div class="marker-line" />}
          </div>

          <div class="timeline-content">
            <div class="timeline-header">
              <div class="timeline-title-group">
                <h3 class="timeline-role">{item.name}</h3>
                <span class="timeline-company">{item.company}</span>
              </div>
              <div class="timeline-meta">
                <span class="timeline-date">
                  {item.startDate} — {item.endDate}
                </span>
                <span class="timeline-location">{item.location}</span>
              </div>
            </div>

            {item.description.length > 0 && (
              <ul class="timeline-details">
                {item.description.map((desc) => (
                  <li>{desc.replace("✓ ", "")}</li>
                ))}
              </ul>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .experience-section {
    padding: 5rem 1.5rem;
    max-width: 72rem;
    margin: 0 auto;
  }

  .section-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .section-label {
    display: inline-block;
    font-family: "Inter", sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #33d2ff;
    margin-bottom: 0.75rem;
  }

  .section-title {
    font-family: "Outfit", sans-serif;
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 700;
    color: #111;
  }

  :global([data-theme="dark"]) .section-title {
    color: #fff;
  }

  .timeline {
    position: relative;
    max-width: 48rem;
    margin: 0 auto;
  }

  .timeline-item {
    display: flex;
    gap: 1.5rem;
    padding-bottom: 2.5rem;
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay);
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }

  .marker-dot {
    width: 14px;
    height: 14px;
    background: linear-gradient(135deg, #9845e8, #33d2ff);
    border-radius: 50%;
    box-shadow: 0 0 0 4px rgba(51, 210, 255, 0.2);
    position: relative;
    z-index: 1;
  }

  .marker-line {
    width: 2px;
    flex: 1;
    background: linear-gradient(180deg, #33d2ff 0%, rgba(51, 210, 255, 0.1) 100%);
    margin-top: 0.5rem;
  }

  .timeline-content {
    flex: 1;
    background: rgba(0, 0, 0, 0.02);
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  :global([data-theme="dark"]) .timeline-content {
    background: rgba(255, 255, 255, 0.02);
    border-color: rgba(255, 255, 255, 0.06);
  }

  .timeline-content:hover {
    border-color: rgba(51, 210, 255, 0.3);
    transform: translateX(4px);
    box-shadow: 0 4px 20px rgba(51, 210, 255, 0.1);
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .timeline-title-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .timeline-role {
    font-family: "Outfit", sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #111;
    margin: 0;
  }

  :global([data-theme="dark"]) .timeline-role {
    color: #fff;
  }

  .timeline-company {
    font-family: "Inter", sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: #33d2ff;
  }

  .timeline-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
    text-align: right;
  }

  .timeline-date {
    font-family: "Inter", sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: #666;
  }

  :global([data-theme="dark"]) .timeline-date {
    color: #999;
  }

  .timeline-location {
    font-family: "Inter", sans-serif;
    font-size: 0.8125rem;
    color: #888;
  }

  :global([data-theme="dark"]) .timeline-location {
    color: #666;
  }

  .timeline-details {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .timeline-details li {
    font-family: "Inter", sans-serif;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #555;
    padding-left: 1.5rem;
    position: relative;
  }

  :global([data-theme="dark"]) .timeline-details li {
    color: #aaa;
  }

  .timeline-details li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.625rem;
    width: 6px;
    height: 6px;
    background: #33d2ff;
    border-radius: 50%;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 640px) {
    .timeline-header {
      flex-direction: column;
    }

    .timeline-meta {
      align-items: flex-start;
      text-align: left;
    }

    .timeline-item {
      gap: 1rem;
    }
  }
</style>
