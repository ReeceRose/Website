---
import { info } from "@data";
import Layout from "@layouts/Layout.astro";
import MetaHead from "@components/general/MetaHead.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead
      title="Page Not Found"
      description="The page you're looking for doesn't exist."
    />
  </head>

  <body>
    <Layout>
      <section class="flex flex-col items-center justify-center min-h-[60vh] text-center">
        <h1 class="heading">404</h1>
        <p class="text-xl mb-8 dark:text-light">
          The page you're looking for doesn't exist.
        </p>
        <a
          href="/"
          class="px-6 py-3 text-light bg-blue rounded-lg hover:opacity-80 transition-opacity"
        >
          Go back home
        </a>
      </section>
    </Layout>
  </body>
</html>
